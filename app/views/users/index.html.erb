<p id="notice"><%= notice %></p>

<h1 align="center">Listing all Users</h1>
  <% @users.each do |user| %>
    <div class="row">
      <div class="well col-xs-12">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Show', user, class: "btn btn-success" %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %></td>
              <td><%= link_to 'Destroy', user, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
              
            </tr>
          </tbody>
        </table>
        
      
    </div>
    <% end %>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-success btn-lg" %>
