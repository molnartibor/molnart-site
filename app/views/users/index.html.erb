<p id="notice"><%= notice %></p>

<h1 align="center">Listing all Users</h1>
  <div class="row">
    <div class="well col-xs-12 container">
      <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Created at</th>
              <th>Updated at</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><small><%= user.created_at.strftime("%d. %B. %Y") %></small></td>
              <td><small><%= time_ago_in_words(user.updated_at) %> ago</small></td>
              <td><%= link_to 'Show', user, class: "btn btn-success" %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %></td>
              <td><%= link_to 'Destroy', user, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
  </div>
   
<br>

