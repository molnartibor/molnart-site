<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form" } ) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2"> 
            <%= f.label :name %><br>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Enter username" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2"> 
            <%= f.label :email %><br>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :email, class: "form-control", placeholder: "Enter e-mail" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2"> 
            <%= f.label :password %><br>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter password again!" %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit(@user.new_record? ? "Sign UP" : "Update account", class: "btn btn-primary")  %>
      </div>
    <% end %>
    
  </div>
</div>


